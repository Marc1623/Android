<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.mgmt.RegistrationActivity">


    <Spinner
        android:id="@+id/spinner_cantons"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_tall"
        android:layout_marginTop="@dimen/margin_top" />

    <Spinner
        android:id="@+id/spinner_county"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_tall"
        android:layout_marginTop="@dimen/margin_top" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_email"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_tall"
            android:layout_marginTop="@dimen/margin_top"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/text_checkemail"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_tall"
        android:layout_marginTop="@dimen/margin_top"
        android:ems="10"
        android:hint="@string/check_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/text_pwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_tall"
        android:layout_marginTop="@dimen/margin_top"
        android:ems="10"
        android:hint="@string/pwd"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/text_checkpwd"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_tall"
        android:layout_marginTop="@dimen/margin_top"
        android:ems="10"
        android:hint="@string/check_pwd"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="300dp"
        android:layout_height="@dimen/height_tall"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/button_add"
        android:text="@string/register"
        android:textColor="@color/text_white"
        android:textSize="@dimen/size_text_button"
        android:textStyle="bold" />


</LinearLayout>