<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="750dp">

            <EditText
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_medium"
                android:layout_below="@+id/label_chapter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_right"
                android:ems="10"
                android:inputType="none"
                android:hint="@string/email" />

            <EditText
                android:id="@+id/text_pwd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_medium"
                android:layout_below="@+id/text_email"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_right"
                android:ems="10"
                android:inputType="none"
                android:hint="@string/pwd" />

            <EditText
                android:id="@+id/text_state"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_medium"
                android:layout_below="@+id/text_pwd"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_right"
                android:ems="10"
                android:inputType="none"
                android:hint="@string/state" />

            <EditText
                android:id="@+id/text_county"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_medium"
                android:layout_below="@+id/text_state"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_right"
                android:ems="10"
                android:inputType="none"
                android:hint="@string/county" />

            <Button
                android:id="@+id/button_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_tall"
                android:layout_below="@+id/text_county"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_right"
                android:background="@color/button_update"
                android:text="@string/update"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_text_button"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_tall"
                android:layout_below="@+id/button_update"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_right"
                android:background="@color/button_delete"
                android:text="@string/delete"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_text_button"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>