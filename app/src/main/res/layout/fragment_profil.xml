<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="750dp">


            <TextView
                android:id="@+id/txt_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="Personal Details"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@android:color/holo_gray_light"/>


            <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_profil"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="E-mail" />

            <EditText
                android:id="@+id/editpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editEmail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:text="Password" />

            <EditText
                android:id="@+id/editKanton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editpwd"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:text="Kanton" />

            <EditText
                android:id="@+id/editCounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editKanton"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:text="Gemeinde" />

            <EditText
                android:id="@+id/editLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editCounty"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:text="Sprache" />



            <Button
                android:id="@+id/bUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/editLanguage"
                android:text="Update"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_green_light"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/bUpdate"
                android:text="Delete"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_red_light"/>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>