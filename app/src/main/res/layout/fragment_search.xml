<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="750dp">
        <TextView
            android:id="@+id/label_chapter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_medium"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="@string/chapter_search"
            android:textAlignment="center"
            android:textSize="@dimen/size_text_chapter"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:background="@color/chapter"/>

            <EditText
                android:id="@+id/text_ahv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_tall"
                android:layout_below="@+id/label_chapter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_right"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:text="@string/ahv" />

    <EditText
        android:id="@+id/text_firstname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tall"
        android:layout_below="@+id/text_ahv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_right"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/firstname" />

        <EditText
            android:id="@+id/text_lastname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tall"
            android:layout_below="@+id/text_firstname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginEnd="@dimen/margin_right"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/lastname" />


        <EditText
            android:id="@+id/text_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tall"
            android:layout_below="@+id/text_lastname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginEnd="@dimen/margin_right"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:text="@string/state" />

        <EditText
            android:id="@+id/text_county"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tall"
            android:layout_below="@+id/text_state"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginEnd="@dimen/margin_right"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:text="@string/county" />


            <Button
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_tall"
                android:layout_below="@+id/text_county"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_right"
                android:background="@color/button_search"
                android:text="@string/search"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_text_button"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>