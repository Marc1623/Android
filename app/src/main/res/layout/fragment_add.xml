<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="866dp">


            <EditText
                android:id="@+id/edt_Birthdate"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/b_add"
                android:layout_alignStart="@+id/b_add"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Geburtstag"
                android:inputType="date" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edt_Birthdate"
                android:layout_alignStart="@+id/edt_Birthdate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Telefonnummer"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edit_zip"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edit_phone"
                android:layout_alignStart="@+id/edt_Birthdate"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="PLZ"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/edit_city"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edit_phone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Ort"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/edit_street"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edit_zip"
                android:layout_alignStart="@+id/edt_Birthdate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Strasse"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/edit_lastname"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edit_street"
                android:layout_alignStart="@+id/edt_Birthdate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Lastname"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_firstname"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edit_lastname"
                android:layout_alignStart="@+id/edt_Birthdate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Firstname"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_avs"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_above="@+id/edit_firstname"
                android:layout_alignStart="@+id/edt_Birthdate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="AHV-Nummer"
                android:inputType="number" />

            <Button
                android:id="@+id/b_add"
                android:layout_width="300dp"
                android:layout_height="63dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:background="#2196F3"
                android:fontFamily="sans-serif"
                android:text="Add"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#F5EAEE"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>