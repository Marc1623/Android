                android:text="@string/waadt" />

            <Button
                android:id="@+id/buttonWallis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_wallis"
                android:text="@string/wallis" />

            <Button
                android:id="@+id/buttonNeuenburg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_neuenburg"
                android:text="@string/neuenburg" />

            <Button
                android:id="@+id/buttonGenf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_genf"
                android:text="@string/genf" />

            <Button
                android:id="@+id/buttonJura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_jura"
                android:text="@string/jura" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>