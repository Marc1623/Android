<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonZurich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_zurich"
                android:text="@string/zurich" />

            <Button
                android:id="@+id/buttonBerne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_bern"
                android:text="@string/bern" />

            <Button
                android:id="@+id/buttonLuzerne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_luzern"
                android:text="@string/lucerne" />

            <Button
                android:id="@+id/buttonUri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_uri"
                android:text="@string/uri" />

            <Button
                android:id="@+id/buttonSchwyz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_schwyz"
                android:text="@string/schwyz" />

            <Button
                android:id="@+id/buttonObwalden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_obwalden"
                android:text="@string/obwalden" />

            <Button
                android:id="@+id/buttonNidwalden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_nidwalden"
                android:text="@string/nidwalden" />

            <Button
                android:id="@+id/buttonGlarus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_glarus"
                android:text="@string/glarus" />

            <Button
                android:id="@+id/buttonZug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_zug"
                android:text="@string/zug" />

            <Button
                android:id="@+id/buttonFreiburg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_freiburg"
                android:text="@string/freiburg" />

            <Button
                android:id="@+id/buttonSolothurn"
                android:layout_width="match_parent"
