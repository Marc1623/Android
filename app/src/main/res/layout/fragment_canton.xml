                android:text="@string/basel_Stadt" />

            <Button
                android:id="@+id/buttonBasel-Landschaft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baselland_1"
                android:text="@string/basel_landschaft" />

            <Button
                android:id="@+id/buttonSchafhausen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_schaffhausen"
                android:text="@string/schaffhausen" />

            <Button
                android:id="@+id/buttonAppenzell_Ausserrhoden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_appenzellre"
                android:text="@string/appenzell_ausserrhoden" />

            <Button
                android:id="@+id/buttonAppenzell_Innerrhoden"
                android:layout_width="match_parent"
