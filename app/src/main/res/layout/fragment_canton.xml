                android:id="@+id/buttonGraubunden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_graubuenden"
                android:text="@string/grisons" />

            <Button
                android:id="@+id/buttonArgau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_aargau"
                android:text="@string/aargau" />

            <Button
                android:id="@+id/buttonThurgau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_thurgau"
